# Configuración de la aplicación
APP_NAME="BDNS GraphQL API"
APP_VERSION="1.0.0"
DEBUG=True

# Configuración Oracle Cloud PostgreSQL (DEBUG=False)
DB_HOST_PROD=your-oracle-cloud-host
DB_PORT_PROD=5432
DB_NAME_PROD=bdns_prod
DB_USER_PROD=admin
DB_PASSWORD_PROD=your-strong-password

# Configuración PostgreSQL Local (DEBUG=True)
DB_HOST_LOCAL=localhost
DB_PORT_LOCAL=5432
DB_NAME_LOCAL=bdns
DB_USER_LOCAL=postgres
DB_PASSWORD_LOCAL=postgres



# Configuración de Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# Configuración de la API BDNS
BDNS_API_URL=https://www.pap.hacienda.gob.es/bdnstrans/GE/es/api
BDNS_REQUEST_DELAY=2.0
BDNS_PAGE_SIZE=1000

# Configuración ETL
ETL_BATCH_SIZE=5000
ETL_MAX_WORKERS=1

# Límites de consulta GraphQL
GRAPHQL_MAX_COMPLEXITY=100
GRAPHQL_MAX_DEPTH=10

